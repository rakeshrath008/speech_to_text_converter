{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist",
    "lib": ["dom", "es2016", "es2015.promise", "es2015.iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
